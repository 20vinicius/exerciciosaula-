public class DeclementoInclemento {

	public static void main(String[] args) {
		int a = 1;
		System.out.println(a ++);//pos inclemento
		System.out.println(++a);//
		System.out.println(a);
		System.out.println(a--);//pr√© declemento
		System.out.println(a);
		System.out.println(--a);//pos declemento
		System.out.println(a);
