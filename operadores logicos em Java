
public class Condicionais {

	public static void main(String[] args) {
		double NotaA, NotaB, Media;
		NotaA = 8;
		NotaB = 7;
		Media = (NotaA + NotaB)/2;
		System.out.println(Media);
    if (Media >= 8) {
    	
    	System.out.println(Media+  "aprovado");
    	
		
	}
    else {
		System.out.println(Media+ "reprovado");
	}
	}

}
